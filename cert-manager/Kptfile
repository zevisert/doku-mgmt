apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: cert-manager
packageMetadata:
  shortDescription: Automatically provision and manage TLS certificates in Kubernetes
openAPI:
  definitions:
    io.k8s.cli.setters.email:
      x-k8s-cli:
        setter:
          name: email
          value: user@example.com
          setBy: package-default
    io.k8s.cli.setters.issuer:
      x-k8s-cli:
        setter:
          name: issuer
          value: https://acme-v02.api.letsencrypt.org/directory
          setBy: package-default
    io.k8s.cli.setters.namespace:
      x-k8s-cli:
        setter:
          name: namespace
          value: appdat-system
          setBy: package-default
    io.k8s.cli.substitutions.webhook-ca:
      x-k8s-cli:
        substitution:
          name: webhook-ca
          pattern: ${namespace}/cert-manager-webhook-ca
          values:
          - marker: ${namespace}
            ref: '#/definitions/io.k8s.cli.setters.namespace'
