apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: ingress-nginx
packageMetadata:
  shortDescription: NGINX Ingress Controller for Kubernetes
openAPI:
  definitions:
    io.k8s.cli.setters.log-bucket:
      x-k8s-cli:
        setter:
          name: log-bucket
          value: nlb-access-logs
    io.k8s.cli.setters.namespace:
      x-k8s-cli:
        setter:
          name: namespace
          value: ingress-nginx
    io.k8s.cli.substitutions.headers-config-path:
      x-k8s-cli:
        substitution:
          name: headers-config-path
          pattern: add-headers=${namespace}/ingress-nginx-custom-add-headers
          values:
          - marker: ${namespace}
            ref: '#/definitions/io.k8s.cli.setters.namespace'
